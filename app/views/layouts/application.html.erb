<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    
    <nav class="navbar is-warning is-light">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <%= image_tag "camera-man-boy.png", class: "icon" %>
          <h1 class="title is-3" style="font-family: cursive;">teregram</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarBasicExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <% if user_signed_in? %>
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to "投稿一覧", posts_path, class: "navbar-item button is-warning is-light" %>
          </div>
          <div class="navbar-item">
            <%= link_to "新規投稿", new_post_path, class: "navbar-item button is-warning is-light" %>
          </div>
          <div class="navbar-end">
            <div class="field is-grouped">
              <p class="navbar-item">
                <%= link_to "ユーザー一覧", users_path, class: "navbar-item button is-warning is-light" %>
              </p>
              <p class="navbar-item">
                <%= link_to "マイページ", user_path(current_user), class: "navbar-item button is-warning is-light" %>
              </p>
              <p class="navbar-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "navbar-item button is-danger is-light" %>              
              </p>
            </div>
          </div>
        </div>
      <% else %>
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to "投稿一覧", posts_path, class: "navbar-item button is-warning is-light" %>
          </div>
          <div class="navbar-item">
            <%= link_to "新規投稿", new_post_path, class: "navbar-item button is-warning is-light" %>
          </div>
          <div class="navbar-end">
            <div class="field is-grouped">
              <p class="navbar-item">
                <%= link_to "ユーザー一覧", users_path, class: "navbar-item button is-warning is-light" %>
              </p>
              <p class="navbar-item">
                <%= link_to "ログイン", new_user_session_path, class: "navbar-item button is-primary" %>
              </p>
              <p class="navbar-item">
                <%= link_to "新規登録", new_user_registration_path, class: "navbar-item button is-success is-light" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </nav>

    <%= yield %>

    <footer class="footer has-background-grey-lighter">
      <div class="container">
        <div class="content has-text-centered">
          2022 YUTO KUBO<br>
          <%= link_to "ソースコードはこちら", "https://github.com/YUTOKUBO2001/teregram" %>
        </div>
      </div>
    </footer>
  </body>
</html>
